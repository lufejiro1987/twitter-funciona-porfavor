<div class="block text-center col-12">
  <h1 class="block-title">Following</h1>
</div>
<hr>
<% if @friends.count > 0 %>

<% @friends.each do |friend| %>
<div><p><%= image_tag friend.friend.profile_img_url, class: 'user-thumb', size: '200x200' %> <%= link_to friend.friend.username, userprofile_path(user: friend.friend) %> </p></div>
<hr>
<% end %>
<%= paginate @friends %>

<% else %>
<p><em>No Followers</em></p>
<% end %>